@model Groomers.Models.CustomerDetail

@{
    ViewBag.Title = "Profile Page";
    //int personID = Model.PersonID;
}

<style>

    .Profile {
        margin-left: 2em;
        max-width: 35em;
    }

    dt {
        margin-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    #personID {
        margin-top: 8px;
    }

    h4 {
        font-weight: bold;
    }

    #maxTable {
        max-width: 30em;
    }

    #tableDiv {
        text-align: left;
        margin-left: 4em;
    }


    .booking {
        height: 10em;
        padding-top: .5em;
        margin-top: 0em;
        margin-left: 5em;
        text-align: left;
    }

    #mainPic {
        max-width: 30%;
        height: auto;
        float: right;
        margin-right: 15em;
        margin-top: -25em;
    }
</style>

<h3>Profile Page</h3>

<div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.PersonID }) |

        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Back to Home", "Index", "Customer")

        }
        else if (User.IsInRole("User"))
        {
            @Html.ActionLink("Back to Home", "UserIndex", "Users")
        }
    </p>
</div>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}



    <div class="Profile">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PersonID)
            </dt>

            <dd id="personID">
                @Html.DisplayFor(model => model.PersonID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StreetAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ZipCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Pets)
            </dt>
            <dd>
                @foreach (var p in Model.Pets)
                {
                    @p.Name
                }
            </dd>
            <dd>
            </dd>
        </dl>
    </div>

    <div class="text-right">
        <img src="~/Content/Images/dog_shampoo.jpg" class="img-fluid img-responsive" id="mainPic" alt="Groomers Inc">
    </div>

    <div class="container" id="tableDiv">
        <h4>Appointments</h4>
        <table class="table table-hover table-responsive table-bordered" id="maxTable">
            <thead>
                <tr>
                    <th class="tableColumn" scope="col">Date</th>
                    <th class="tableColumn2" scope="col">Time</th>
                    <th class="tableColumn3" scope="col">Pet</th>
                </tr>
            </thead>
            @foreach (var p in Model.Appointments)
            {
                <tbody>
                    <tr>
                        <td> @Html.DisplayFor(model => p.AppointmentDate, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>  @Html.DisplayFor(model => p.StartTime, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.DisplayFor(model => p.PetName, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>



    <div class="booking">
        <h4>Book Another Appointment</h4>
        <table class="table-responsive" id="BookingTable" align="left">
            <thead>
                <tr>
                    <th scope="col">@Html.Partial("SearchDate", new Groomers.Models.SearchDatePV())</th>

                </tr>
            </thead>
        </table>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.PersonID }) |

        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Back to Home", "Index", "Customer")

        }
        else if (User.IsInRole("User"))
        {
            @Html.ActionLink("Back to Home", "UserIndex", "Users")
        }
    </p>

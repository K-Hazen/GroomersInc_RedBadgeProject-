@model IEnumerable<Groomers.Models.CustomerListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Quick Profile</h2>

@*<p>
    @Html.ActionLink("Add Another User", "Create")
</p>*@

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.PersonID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileCreationDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ProfileModifiedDate)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Pets)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
                @Html.HiddenFor(modelItem => item.PersonID)
                @*@Html.DisplayFor(modelItem => item.PersonID)*@
        <tr>           
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileCreationDate)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.ProfileModifiedDate)
            </td>*@
            <td>

                @foreach (var p in item.Pets)
                {
                    @p.Name
                }
            </td>
            <td>
                @Html.ActionLink("Profile", "Details", new { id = item.PersonID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
            </td>
        </tr>
    }

</table>

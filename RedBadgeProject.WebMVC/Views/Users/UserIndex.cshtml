@model Groomers.Models.CustomerHomePage

@{
    ViewBag.Title = "User Homepage";
}

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="jumbotron">
    <h1>Welcome @Html.DisplayFor(model => model.FirstName)! </h1>
    <p class="lead">Looking to book your favorite family member a day at the spa!?!? You are in the right place. Just input a date and hit the search button and off you go!</p>
    @Html.Partial("SearchDate", new Groomers.Models.SearchDatePV())
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Add your Pet</h2>
        <p>
            We love our customers, but we love their dogs more! Please create a profile for your pet so we have all their important details.
        </p>
        <p><a class="btn btn-default" href=@Url.Action("Create","Pet")>Add A Pet &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>View Appointments</h2>
        <p>Need to check in on you appointments? No worries, we got you covered. Just click here to see what you have scheduled. </p>
        <p><a class="btn btn-default" href=@Url.Action("Details", "Customer", new { id = Model.PersonID })>See Appointments &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Edit/Update Profile</h2>
        <p>Make changes to your contact info etc... here. </p>
        <p><a class="btn btn-default" href=@Url.Action("Edit","Customer", new { id = Model.PersonID })>Update Customer &raquo;</a></p>
        <br/> 
        <p><a class="btn btn-default" href=@Url.Action("Index","Pet", new { id = Model.UserID })>Update Pet &raquo;</a></p>
    </div>
</div>
